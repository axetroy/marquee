{
  "name": "@axetroy/marquee",
  "version": "0.1.3",
  "description": "Marquee component for Vue.js & React.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "parcel index.html",
    "build": "npm run clean && npm run build:react && npm run build:vue && npm run move:d",
    "build:react": "webpack --config ./webpack.react.config.js --display-error-details --progress --colors",
    "build:vue": "webpack --config ./webpack.vue.config.js --display-error-details --progress --colors",
    "build:website": "rm -rf ./doc && parcel build index.html -d ./doc --public-url /marquee",
    "deploy": "npm run build:website && npx gh-pages -d ./doc",
    "clean": "rm -rf ./dist",
    "move:d": "cp ./dist/react/index.d.ts ./react/index.d.ts && cp ./dist/vue/index.vue.d.ts ./vue/index.d.ts"
  },
  "devDependencies": {
    "@babel/polyfill": "7.10.1",
    "@types/react": "16.9.36",
    "@types/react-dom": "16.9.8",
    "@types/webpack": "4.41.17",
    "@vue/component-compiler-utils": "3.1.2",
    "parcel-bundler": "1.12.4",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "ts-loader": "7.0.5",
    "tslib": "2.0.0",
    "typescript": "3.9.5",
    "vue": "2.6.11",
    "vue-hot-reload-api": "2.3.4",
    "vue-loader": "15.9.2",
    "vue-template-compiler": "2.6.11",
    "webpack": "4.43.0",
    "webpack-cli": "3.3.11"
  },
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "vue": "^2.6.10"
  }
}
